AT_COMPILE_CHECK([simple/igraph_i_layout_sphere.c])
AT_CLEANUP

AT_SETUP([Merging layouts (igraph_i_layout_merge):])
AT_KEYWORDS([layout merge])
AT_COMPILE_CHECK([simple/igraph_layout_merge.c])
AT_CLEANUP
